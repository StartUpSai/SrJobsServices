@using (Html.BeginForm("Registration", "Index", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="col-md-3"></div>
    <div class="main col-md-4" style="border:1px solid grey;" id="registration">
        <div class="col-md-0"></div>
        <div class="col-md-12">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <h1 class="title" style="color:#4faab9">Sign Up&nbsp;<i class="icon-pencil-4"></i></h1>
                    <p>Complete the form below & Get<span style="color:#4faab9"> Our Job Notification</span></p>
                </div>
            </div>
            <hr style="border-top:1px solid #eee;margin-bottom:0px ; margin-top:0px" />
            <div class="main-login main-center">
                <div class="alert alert-danger display-hide" id="UserError">
                    <button class="close" data-close="alert"></button>
                    <span id="LogOnError">@Html.ValidationMessage("LogOnError", new { })</span>
                </div>
                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">User Name</label>
                    <div class="cols-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon" style="border:1px solid #4faab9 "><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            @Html.EditorFor(model => model.User_name,
                                                new
                                                {
                                                    htmlAttributes = new
                                                {
                                                    @class = "form-control placeholder-no-fix",
                                                    autocomplete = "off",
                                                    placeholder = "UserName",
                                                    name = "username"
                                                }
                                                })
                        </div>
                        @Html.ValidationMessageFor(model => model.User_name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">First Name</label>
                    <div class="cols-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon" style="border:1px solid #4faab9 "><i class="fa fa-user fa" aria-hidden="true"></i></span>
                            @Html.EditorFor(model => model.First_name,
                                                new
                                                {
                                                    htmlAttributes = new
                                                        {
                                                            @class = "form-control placeholder-no-fix",
                                                            autocomplete = "off",
                                                            placeholder = "FirstName",
                                                            name = "firstname"
                                                        }
                                                })
                        </div>
                        @Html.ValidationMessageFor(model => model.First_name, "", new { @class = "text-danger" })
                    </div>
                </div>
                

                <div class="form-group">
                    <label for="password" class="cols-sm-2 control-label">Password</label>
                    <div class="cols-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon" style="border:1px solid #4faab9 "><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                            @Html.EditorFor(model => model.Password,
                                                new
                                                {
                                                    htmlAttributes = new
                                                        {
                                                            @class = "form-control placeholder-no-fix",
                                                            autocomplete = "off",
                                                            placeholder = "Password",

                                                            type = "password",
                                                        }
                                                })
                        </div>
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger", id = "PassWordalert" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="cols-sm-2 control-label">Confirm Password</label>
                    <div class="cols-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon" style="border:1px solid #4faab9 "><i class="icon-key-4" aria-hidden="true"></i></span>
                            @Html.EditorFor(model => model.Confirm_password,
                                                new
                                                {
                                                    htmlAttributes = new
                                                        {
                                                            @class = "form-control placeholder-no-fix",
                                                            autocomplete = "off",
                                                            placeholder = "Re-type Password",
                                                            type = "password",
                                                        }
                                                })
                        </div>
                        @Html.ValidationMessageFor(model => model.Confirm_password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">Email Address</label>
                    <div class="cols-sm-8">
                        <div class="input-group">
                            <span class="input-group-addon" style="border:1px solid #4faab9 "><i class="icon-mail-4" aria-hidden="true"></i></span>
                            @Html.EditorFor(model => model.Email_address,
                                                new
                                                {
                                                    htmlAttributes = new
                                                        {
                                                            @class = "form-control placeholder-no-fix",
                                                            autocomplete = "off",
                                                            placeholder = "EmailAddress",
                                                            name = "emailaddress"
                                                        }
                                                })
                        </div>
                        @Html.ValidationMessageFor(model => model.Email_address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12">
                    <button type="button" id="logback" class="btn btn-success" href="@Url.Action("Home","Index")"
                             style="background-color:#4faab9;border:1px solid #4faab9;float:left">
                        Back to Login!
                    </button>

                    <input type="submit" value="Sign Up" id="basicSuccessWidth1" class="btn btn-success"
                           style="background-color:#4faab9;border:1px solid #4faab9;float:right" />



                </div>




            </div>
        </div>
    </div>
}
