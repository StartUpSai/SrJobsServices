<script>
    $(window).scroll(function () {

        if ($(this).scrollTop() > 500) {
            $('#divlog').fadeIn();
            $('#basicSuccessWidth').hide();
        }
        else {
            $('#divlog').fadeOut();
            $('#basicSuccessWidth').show();
        }
    });

    $("#userid").keypress(function () {
        $("#UserError").hide();
    });

    $("#passwordid").keypress(function () {
        $("#UserError").hide();
    });


    $(document).ready(function () {
        var errorVal = $('#LogOnError').text();
        if (errorVal != '') {
            $('#UserError').show();
        }
        else {
            $('#UserError').hide();
        }
    });



</script>
<script>
    $(document).ready(function () {
        $("#Confirm_password").change(function () {
            if ($("#Password").val() !== $("#Confirm_password").val()) {
                $("#Confirm_password").val("");
                $("#Password").val("");
                $("#PassWordalert").html("Confirm passwrod not matched...!");
                //alert("Your Password and ConfirmPassword does not Matched....!!!");
                $("#Password").focus();
                return false;
            }
            else {
                $("#PassWordalert").html("");
            }
        });
    });
</script>



